  {
    "characters": [
      {
        "name": "HK416",
        "face": 0
      },
      {
        "name": "AK74U",
        "face": 0
      }
    ],
    "speaker": {
      "index": 1,
      "name": "AK74U"
    },
    "text": "416, 너도 친구가 있어?"
