  {
    "characters": [
      {
        "name": "HK416",
        "face": 0
      },
      {
        "name": "M1928A1",
        "face": 0
      }
    ],
    "speaker": {
      "index": 0,
      "name": "HK416"
    },
    "text": "본 적이 있나요?"
